<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_rg" />

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/discover_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_discover_selector"
            android:text="@string/title_discover" />

        <RadioButton
            android:id="@+id/question_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_question_selector"
            android:text="@string/title_question" />

        <View style="@style/Custom.TabRadioButton" />

        <RadioButton
            android:id="@+id/message_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_message_selector"
            android:text="@string/title_message" />

        <RadioButton
            android:id="@+id/personal_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_personal_selector"
            android:text="@string/title_personal" />
    </RadioGroup>

    <ImageView
        android:id="@+id/release_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/release" />
</RelativeLayout>